# ==============================================================================
# ClawOps Console — Environment Variables
# ==============================================================================
# Copy this file to .env.local and fill in your values:
#   cp .env.example .env.local
#
# NEVER commit .env.local to git — it contains secrets!
# ==============================================================================

# --- Server Configuration ---
# Port for the Express BFF server (backend)
SERVER_PORT=3001

# Port for the Vite dev server (frontend) — only used in development
VITE_DEV_PORT=5173

# --- Authentication ---
# Secret key for signing JWT tokens. Generate one with:
#   node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
# IMPORTANT: Change this from the default before deploying anywhere!
JWT_SECRET=change-me-to-a-random-64-char-string-before-production

# How long login sessions last (e.g., "24h", "7d", "1h")
JWT_EXPIRY=24h

# --- Default Admin Account ---
# These are used by the seed script to create the first user.
# Change the password immediately after first login!
DEFAULT_ADMIN_EMAIL=admin@clawops.local
DEFAULT_ADMIN_PASSWORD=changeme123

# --- OpenClaw Connection ---
# Where is OpenClaw's API running? Typically localhost if running on same machine.
OPENCLAW_API_URL=http://localhost:8000
OPENCLAW_API_KEY=

# --- Database ---
# Path to the SQLite database file. Relative to project root.
# The file will be created automatically on first run.
DB_PATH=./data/clawops.db

# --- Safety Limits ---
# Maximum number of agents that can run at the same time
MAX_CONCURRENT_AGENTS=3

# Maximum cost (in USD) per single agent run before hard-stop
MAX_COST_PER_RUN=5.00

# Maximum duration (in seconds) per agent run before hard-stop
MAX_DURATION_PER_RUN=300

# Maximum tokens per single agent run
MAX_TOKENS_PER_RUN=100000

# Maximum agent runs allowed per hour (rate limiting)
MAX_RUNS_PER_HOUR=20

# --- Logging ---
# Log level: "debug", "info", "warn", "error"
LOG_LEVEL=info

# --- Frontend Environment Variables ---
# Variables prefixed with VITE_ are accessible in the React frontend.
# The Express server URL as seen from the browser:
VITE_API_URL=http://localhost:3001/api
VITE_WS_URL=http://localhost:3001
